    <script>
        // ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑŸÇŸäŸÖ ÿßŸÑŸÖÿ≠ŸÅŸàÿ∏ÿ© ÿπŸÜÿØ ŸÅÿ™ÿ≠ ÿßŸÑÿµŸÅÿ≠ÿ©
        window.addEventListener('DOMContentLoaded', function() {
            const savedData = localStorage.getItem('nutritionData');
            if (savedData) {
                const data = JSON.parse(savedData);
                
                // ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑŸÖÿØÿÆŸÑÿßÿ™
                if (data.inputs) {
                    document.getElementById('calories').value = data.inputs.calories || '';
                    document.getElementById('carbs-percent').value = data.inputs.carbsPercent || '';
                    document.getElementById('protein-percent').value = data.inputs.proteinPercent || '';
                    document.getElementById('fat-percent').value = data.inputs.fatPercent || '';
                }
                
                // ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨ ÿ•ÿ∞ÿß ŸÉÿßŸÜÿ™ ŸÖŸàÿ¨ŸàÿØÿ©
                if (data.results) {
                    document.getElementById('carbs-result').textContent = data.results.carbs;
                    document.getElementById('protein-result').textContent = data.results.protein;
                    document.getElementById('fat-result').textContent = data.results.fat;
                    document.getElementById('results').classList.add('show');
                }
            }
        });

        document.getElementById('macroForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // ÿßŸÑÿ≠ÿµŸàŸÑ ÿπŸÑŸâ ÿßŸÑŸÇŸäŸÖ ÿßŸÑŸÖÿØÿÆŸÑÿ©
            const totalCalories = parseFloat(document.getElementById('calories').value);
            const carbsPercent = parseFloat(document.getElementById('carbs-percent').value);
            const proteinPercent = parseFloat(document.getElementById('protein-percent').value);
            const fatPercent = parseFloat(document.getElementById('fat-percent').value);

            // ÿßŸÑÿ™ÿ≠ŸÇŸÇ ŸÖŸÜ ÿ£ŸÜ ŸÖÿ¨ŸÖŸàÿπ ÿßŸÑŸÜÿ≥ÿ® = 100%
            const totalPercent = carbsPercent + proteinPercent + fatPercent;
            if (Math.abs(totalPercent - 100) > 0.1) {
                alert('‚ö†Ô∏è ŸÖÿ¨ŸÖŸàÿπ ÿßŸÑŸÜÿ≥ÿ® Ÿäÿ¨ÿ® ÿ£ŸÜ Ÿäÿ≥ÿßŸàŸä 100%\nÿßŸÑŸÖÿ¨ŸÖŸàÿπ ÿßŸÑÿ≠ÿßŸÑŸä: ' + totalPercent.toFixed(1) + '%');
                return;
            }

            // ÿ≠ÿ≥ÿßÿ® ÿßŸÑÿ≥ÿπÿ±ÿßÿ™ ŸÑŸÉŸÑ ŸÖÿ∫ÿ∞Ÿä
            const carbsCalories = (totalCalories * carbsPercent) / 100;
            const proteinCalories = (totalCalories * proteinPercent) / 100;
            const fatCalories = (totalCalories * fatPercent) / 100;

            // ÿ™ÿ≠ŸàŸäŸÑ ÿßŸÑÿ≥ÿπÿ±ÿßÿ™ ÿ•ŸÑŸâ ÿ¨ÿ±ÿßŸÖÿßÿ™
            // ÿßŸÑŸÉÿ±ÿ®ŸàŸáŸäÿØÿ±ÿßÿ™: 1 ÿ¨ÿ±ÿßŸÖ = 4 ÿ≥ÿπÿ±ÿßÿ™
            const carbsGrams = Math.round(carbsCalories / 4);
            
            // ÿßŸÑÿ®ÿ±Ÿàÿ™ŸäŸÜ: 1 ÿ¨ÿ±ÿßŸÖ = 4 ÿ≥ÿπÿ±ÿßÿ™
            const proteinGrams = Math.round(proteinCalories / 4);
            
            // ÿßŸÑÿØŸáŸàŸÜ: 1 ÿ¨ÿ±ÿßŸÖ = 9 ÿ≥ÿπÿ±ÿßÿ™
            const fatGrams = Math.round(fatCalories / 9);

            // ÿπÿ±ÿ∂ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨
            document.getElementById('carbs-result').textContent = carbsGrams;
            document.getElementById('protein-result').textContent = proteinGrams;
            document.getElementById('fat-result').textContent = fatGrams;

            // ÿ≠ŸÅÿ∏ ÿßŸÑÿ®ŸäÿßŸÜÿßÿ™ ŸÅŸä localStorage
            const dataToSave = {
                inputs: {
                    calories: totalCalories,
                    carbsPercent: carbsPercent,
                    proteinPercent: proteinPercent,
                    fatPercent: fatPercent
                },
                results: {
                    carbs: carbsGrams,
                    protein: proteinGrams,
                    fat: fatGrams
                },
                timestamp: new Date().toISOString()
            };
            localStorage.setItem('nutritionData', JSON.stringify(dataToSave));

            // ÿ•ÿ∏Ÿáÿßÿ± ŸÇÿ≥ŸÖ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨
            const resultsDiv = document.getElementById('results');
            resultsDiv.classList.add('show');

            // ÿßŸÑÿ™ŸÖÿ±Ÿäÿ± ÿ•ŸÑŸâ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨
            setTimeout(() => {
                resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 100);
        });

        // ÿßŸÑÿ™ÿ≠ŸÇŸÇ ŸÖŸÜ ŸÖÿ¨ŸÖŸàÿπ ÿßŸÑŸÜÿ≥ÿ® ÿ£ÿ´ŸÜÿßÿ° ÿßŸÑŸÉÿ™ÿßÿ®ÿ©
        const percentInputs = ['carbs-percent', 'protein-percent', 'fat-percent'];
        percentInputs.forEach(id => {
            document.getElementById(id).addEventListener('input', function() {
                const carbs = parseFloat(document.getElementById('carbs-percent').value) || 0;
                const protein = parseFloat(document.getElementById('protein-percent').value) || 0;
                const fat = parseFloat(document.getElementById('fat-percent').value) || 0;
                const total = carbs + protein + fat;
                
                // ÿ™ÿ∫ŸäŸäÿ± ŸÑŸàŸÜ ÿßŸÑÿ≠ŸÇŸàŸÑ ÿ®ŸÜÿßÿ°Ÿã ÿπŸÑŸâ ÿßŸÑŸÖÿ¨ŸÖŸàÿπ
                percentInputs.forEach(inputId => {
                    const input = document.getElementById(inputId);
                    if (total > 100) {
                        input.style.borderColor = '#ff6b6b';
                    } else if (total === 100) {
                        input.style.borderColor = '#51cf66';
                    } else {
                        input.style.borderColor = '#e0e0e0';
                    }
                });
            });
        });
       
    </script>
